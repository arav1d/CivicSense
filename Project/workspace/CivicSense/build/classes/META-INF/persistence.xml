<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="CivicSense" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>tgmcdb</jta-data-source>
		<class>entity.Administrator</class>
		<class>entity.Authority</class>
		<class>entity.Citizen</class>
		<class>entity.Complaint</class>
		<class>entity.Groupcontent</class>
		<class>entity.Group</class>
		<class>entity.Location</class>
		<class>entity.Memo</class>
		<class>entity.Ngo</class>
		<class>entity.Suggestion</class>
		<class>entity.Verification</class>
		<class>entity.Complaintdetail</class>
		<class>entity.Suggestionsupport</class>
		<class>entity.SuggestionsupportPK</class>
		<class>entity.Complaintsupport</class>
		<class>entity.ComplaintsupportPK</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="openjpa.TransactionMode" value="managed"/>
			<property name="openjpa.ConnectionFactoryMode" value="managed"/>
			<property name="openjpa.jdbc.DBDictionary" value="db2"/>
		</properties>
	</persistence-unit>
</persistence>
